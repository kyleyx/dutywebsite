<h1> Edit the problem </h1>
<%= form_with(model: @problem) do |form| %>
 
  <% if @problem.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@problem.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @problem.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= form.label :computer_number %><br>
    <%= form.text_field :computer_num %>
  </p>
 
  <p>
    <%= form.label :description %><br>
    <%= form.text_area :detail %>
  </p>
 
  <p>
    <%= form.label :fixed %><br>
    <%= form.check_box :status %><br>
    <!--<%= form.text_area :status %>-->
  </p>
  <p>
    <%= form.submit "Save"%>
  </p>
 
<% end %>
 
